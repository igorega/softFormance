.slider.js-slider
	// slider quotes
	.slider__quotes
		+quotes

	// slider nav
	.slider__nav
		button.slider__nav-prev.js-slide-prev(
			type='button'
			aria-label='Prev Slide'
			title=''
			disabled
		)
			+arrow

		button.slider__nav-next.js-slide-next(
			type='button'
			aria-label='Next Slide'
			title='Next Slide'
		)
			+arrow

	// slider content
	.slider__content


		- const items = 3;

		- for (let i = 0; i < items; i++)
			if (i === 0)
				- blockquoteText1 = 'I have worked with a number of software developers before but none of them quite reached the level of professionalism, diligence and enthusiasm that I experienced with Vitaliy and his team. They are incredibly easy to work with and almost always find great programming solutions to our requirements.'
				- blockquoteText2 = 'What I especially liked about the SoftFormance team is their passion and understanding for our project. It’s like working with friends. Friends that deliver on their promises. I have nothing but praise for the work of SoftFormance team and look forward to working with this agency in the future.'
				- author = 'Wolfgang Männel'
				- position = 'Founder and Managing Director'
				- underline = 'Fotografen365'
			else if (i === 1)
				- blockquoteText1 = 'Lorem ipsum dolor sit amet consectetur, adipisicing elit. Rem animi, ratione sequi laboriosam mollitia corporis ipsum soluta voluptate reiciendis facere, qui iure. Officiis ea quas alias reprehenderit nostrum similique eum.'
				- blockquoteText2 = 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minus repudiandae modi placeat eligendi eveniet nam! Veniam illo laboriosam ducimus alias dolorem, debitis veritatis blanditiis, delectus consequuntur ea repellendus, libero quia.'
				- author = 'Stepan'
				- position = 'CTO'
				- underline = 'someText'
			else if (i === 2)
				- blockquoteText1 = 'Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eum enim reprehenderit ducimus, deleniti asperiores sit. Dolor dignissimos voluptatem perferendis rem provident corporis ut eaque, alias similique vero delectus error rerum.'
				- blockquoteText2 = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempore, quibusdam dolore explicabo fugit nesciunt suscipit iure! Magnam molestiae reiciendis commodi quidem distinctio non aliquam quas quibusdam consectetur veniam? Optio, facilis.'
				- author = 'Alex'
				- position = 'HR'
				- underline = 'someText'

			// slide
			.slider__slide.js-slide
				figure.slider__testimonial
					blockquote.slider__blockquote
						p.slider__blockquote-text #{blockquoteText1}
						p.slider__blockquote-text #{blockquoteText2}

					figcaption.slider__author
						| #{author}
						span.slider__author-position #{position}, 
							b.fw-500.text-underline #{underline}

				.slider__img
					img(src=`img/components/slider/img/slide-${i}.jpg`, alt='')
